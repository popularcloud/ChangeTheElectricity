<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
<include layout="@layout/include_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="visible"
        android:padding="@dimen/dp_15"
        android:id="@+id/ll_batterys"
        android:layout_margin="@dimen/dp_15">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:text="当前扫码设备信息"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_33"
            android:layout_marginTop="@dimen/dp_15"
            android:text=""/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/ic_location_gray"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/gray_99"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_battery_account"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text=""/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_order_battery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_battery_bg"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_104"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_gravity="center"
            android:background="@mipmap/ic_battery_down_bg"
            android:orientation="horizontal">
         <!--   <TextView
                android:id="@+id/tv_has_bg"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_80"
                android:background="@color/grenn_39"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/tv_has_bg"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_80"
                android:background="@color/grenn_39"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_has"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title01"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_yq"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text=""/>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_25"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:padding="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:background="@drawable/btn_blue_bg"
        android:text="开始换电"
        />
</LinearLayout>