<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".changetheelectricity.fragment.BatteryDetailsFragment">
    <LinearLayout
        android:id="@+id/ll_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_battery_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_15"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:text=""/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        android:visibility="visible"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_order_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_battery_bg"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_104"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_gravity="center"
            android:background="@mipmap/ic_battery_down_bg"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_has_bg"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_80"
                android:background="@color/grenn_39"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_has"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10%"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title01"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_99"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_yq"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_25"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:text=""/>
</LinearLayout>