<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <com.younge.changetheelectricity.widget.CustomViewPager
            android:id="@+id/cViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></com.younge.changetheelectricity.widget.CustomViewPager>
        <View style="@style/line_ccStyle" />
        <RadioGroup
            android:id="@+id/group_tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_home"
                style="@style/main_menu_radiobutton_style"
                android:checked="true"
                android:visibility="gone"
                android:drawableTop="@drawable/tab_main_selector"
                android:text="服务" />

            <RadioButton
                android:id="@+id/radio_mba"
                style="@style/main_menu_radiobutton_style"
                android:visibility="gone"
                android:drawableTop="@drawable/tab_main_selector"
                android:text="商城" />
            <RadioButton
                android:id="@+id/radio_news"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_main_selector"
                android:text="出发" />
            <RadioButton
                android:id="@+id/radio_charge_battery"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_main_selector"
                android:visibility="gone"
                android:text="出发" />
            <RadioButton
                android:id="@+id/radio_order"
                style="@style/main_menu_radiobutton_style"
                android:visibility="gone"
                android:drawableTop="@drawable/tab_main_selector"
                android:text="活动" />

            <RadioButton
                android:id="@+id/radio_mine"
                style="@style/main_menu_radiobutton_style"
                android:drawableTop="@drawable/tab_mime_selector"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>