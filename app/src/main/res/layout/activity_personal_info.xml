<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line">
    <include layout="@layout/include_title_bar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@mipmap/default_portrait_100"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="1390000"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_white_circle"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSign"
                android:layout_below="@+id/txtOrderCount"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtName"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/ic_gray_right_arrow"
                android:text="13456778900"
                android:textSize="15sp" />
        </LinearLayout>
        <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
        <LinearLayout
            android:id="@+id/ll_package"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSign"
                android:layout_below="@+id/txtOrderCount"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:text="实名认证"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtName"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/ic_gray_right_arrow"
                android:text="已认证"
                android:textSize="15sp" />
        </LinearLayout>
        <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSign"
                android:layout_below="@+id/txtOrderCount"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:text="我的地址"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtName"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/ic_gray_right_arrow"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>
        <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
    </LinearLayout>
</LinearLayout>
