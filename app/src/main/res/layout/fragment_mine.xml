<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f0_gray_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_my_bg"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:id="@+id/txtActionbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:onClick="onBack"
                    android:padding="15dp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/txtRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="提交"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/imgRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/imgNewMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">
                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:src="@mipmap/default_portrait_100" />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_head"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@mipmap/ic_my_edit"
                    android:textSize="@dimen/sp_24" />
                <TextView
                    android:id="@+id/txt_huiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_head"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:text="普通会员"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_head"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:visibility="gone"
                    android:background="@drawable/item_white_circle_right"
                    android:gravity="center"
                    android:text="实名认证"
                    android:textColor="@color/blue_yq"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_bind_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_head"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/item_black_circle"
                    android:gravity="center"
                    android:text="绑定电池"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_bind_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_head"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/tv_bind_battery"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/item_black_circle"
                    android:gravity="center"
                    android:text="绑定车辆"
                    android:layout_marginRight="@dimen/dp_100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/item_white_circle"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_my_wallet"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="我的钱包"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
            <LinearLayout
                android:id="@+id/ll_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_my_package"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="我的套餐"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
            <LinearLayout
                android:id="@+id/ll_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_my_coupon"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="我的优惠券"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_my_order"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="我的订单"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
            <LinearLayout
                android:id="@+id/ll_invitation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_invit_friend"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="邀请好友"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
            <LinearLayout
                android:id="@+id/ll_integral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSign"
                    android:layout_below="@+id/txtOrderCount"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_my_intergral"
                    android:gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:text="我的积分"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtName"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/ic_gray_right_arrow"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <View android:layout_height="1px" android:layout_width="match_parent" android:background="@color/f0_gray_line"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
