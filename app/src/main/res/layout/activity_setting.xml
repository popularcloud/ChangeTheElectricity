<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fa"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title_bar"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_12">
        <TextView
            android:id="@+id/txt_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_gray_right_arrow"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/gray_db"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_12">
        <TextView
            android:id="@+id/txt_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_gray_right_arrow"
            android:gravity="center_vertical"
            android:text="隐私政策"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_12">
        <TextView
            android:id="@+id/txt_clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="清理缓存"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/txt_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_12">
        <TextView
            android:id="@+id/txt_present_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="当前版本"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/txt_present_version_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="1.0.0"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_bg"
        android:padding="@dimen/dp_12">
        <TextView
            android:id="@+id/txt_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_gray_right_arrow"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:background="@drawable/selector_item_bg"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="退出登录"
            android:textColor="@color/blue_0c" />

</LinearLayout>
