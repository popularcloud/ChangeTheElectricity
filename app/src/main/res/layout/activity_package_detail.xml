<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title_bar" />
    <TextView
        android:id="@+id/tv_present_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_15"
        android:text="当前电池"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_white_circle"
            android:padding="@dimen/dp_15"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:scaleType="fitXY" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_26"
                        android:text="￥60"/>
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_99"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="@dimen/sp_15"
                        android:text="15次/30天"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <LinearLayout
                            android:id="@+id/ll_reduce"
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_17"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:background="@drawable/gray_circle_white_bg">
                            <TextView
                                android:id="@+id/tv_reduce"
                                android:layout_width="@dimen/dp_8"
                                android:layout_height="@dimen/dp_12"
                                android:visibility="visible"
                                android:background="@drawable/gray_line_white_bg"
                                android:textColor="@color/black_66"
                                android:textSize="@dimen/dp_15" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:gravity="center"
                            android:text="1"
                            android:visibility="gone"
                            android:textColor="@color/black_66"
                            android:textSize="@dimen/dp_15" />

                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@mipmap/ic_add_package" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/small_red"
        android:text="-----   用户须知   -----"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_white_circle"
        android:padding="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:textSize="@dimen/sp_12"
            ></TextView>
    </LinearLayout>
</LinearLayout>