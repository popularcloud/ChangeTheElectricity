<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0_gray_line"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/item_white_circle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black_66"
                android:text="车架编号"/>
            <EditText
                android:id="@+id/et_car_frame_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content"
                android:textColor="@color/black_66"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/circle_grayfb_bg"
                android:gravity="left"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black_66"
                android:text="车辆品名"/>
            <EditText
                android:id="@+id/et_car_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:textColor="@color/black_66"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/circle_grayfb_bg"
                android:gravity="left"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black_66"
                android:text="车辆牌号"/>
            <EditText
                android:id="@+id/et_car_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"
                android:textColor="@color/black_66"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/circle_grayfb_bg"
                android:gravity="left"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_18"
            android:text="车辆照片"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_car_positive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_120"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/circle_grayfb_bg"
                android:src="@mipmap/ic_add_pic"/>
            <ImageView
                android:id="@+id/iv_car_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_120"
                android:scaleType="centerInside"
                android:background="@drawable/circle_grayfb_bg"
                android:src="@mipmap/ic_add_pic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_66"
                android:gravity="center"
                android:text="车辆正面"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_66"
                android:gravity="center"
                android:text="车辆背面" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_car_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_120"
                android:scaleType="centerInside"
                android:background="@drawable/circle_grayfb_bg"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_add_pic"/>
            <ImageView
                android:id="@+id/iv_car_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_120"
                android:background="@drawable/circle_grayfb_bg"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_add_pic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_66"
                android:gravity="center"
                android:text="车辆左侧"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black_66"
                android:gravity="center"
                android:text="车辆右侧" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/btn_blue_bg"
        android:text="提交" />
</LinearLayout>
</ScrollView>