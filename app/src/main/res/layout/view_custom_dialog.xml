<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_show_shape"
    android:id="@+id/main"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:fadingEdge="none"
    style="@style/DialogTheme">

    <LinearLayout
        android:id="@+id/custom_dialog_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/custom_dialog_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/gray78"
                android:textSize="15sp"
                android:visibility="visible"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_bian" />
            <TextView
                android:id="@+id/custom_dialog_txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="测试地点是多少是是是存储"
                android:textColor="@color/black_66"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="visible" />


            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_bian" />

            <LinearLayout
                android:id="@+id/custom_dialog_view_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom_dialog_btn_2"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/selector_item_bg"
                     android:textColor="@color/gray_99"
                    android:text="@string/cancel" />

                <View
                    android:id="@+id/view_line_btns"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_bian" />

                <TextView
                    android:id="@+id/custom_dialog_btn_1"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                     android:textColor="@color/btn_blue_nomal"
                    android:background="@drawable/selector_item_bg"
                    android:text="@string/enter" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/custom_dialog_txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>