<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_below="@+id/ll_my_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/include_title_bar" android:id="@+id/il_heder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:padding="@dimen/dp_15"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/item_white_circle"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/ic_car_location_blue"
            android:drawablePadding="5dp"
            android:textColor="@color/black_33"
            android:text="车辆定位"/>
        <TextView
            android:id="@+id/tv_last_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="@color/gray_99"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:drawableLeft="@mipmap/ic_nav_gray"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/gray_99"
                android:text=""/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/gray_99"
                android:text=""/>
            <TextView
                android:id="@+id/tv_format_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray_cc"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
