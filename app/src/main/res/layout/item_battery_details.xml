<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_5"
    android:paddingTop="@dimen/dp_15"
    android:background="@drawable/gray_bottom_gray_line"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/oval_black_line_white_bg"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:gravity="right"
            android:textColor="@color/black_33"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>
        <TextView
            android:id="@+id/tv_charge_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:gravity="right"
            android:visibility="gone"
            android:textColor="@color/gray_99"
            android:layout_gravity="center"
            android:text="约18分钟可充满"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_battery_bg"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_gravity="center"
        android:background="@mipmap/ic_battery_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_has_bg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:background="@color/grenn_39"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/btn_blue_bg"
        android:layout_marginLeft="@dimen/dp_25"
        android:text="预约"/>
</LinearLayout>
