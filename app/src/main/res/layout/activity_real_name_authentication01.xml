<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_60">
<LinearLayout
    android:id="@+id/my_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">
    <include layout="@layout/include_title_bar" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/black_66"
        android:text="为了防止您的设备丢失，保障您的合法权益，请使用真实 姓名和身份证号"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="left"
        android:textColor="@color/black_33"
        android:text="真实姓名"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="left"
        android:background="@null"
        android:textColorHint="@color/gray_cc"
        android:textColor="@color/black_33"
        android:hint="请输入真实姓名"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="left"
        android:textColor="@color/black_33"
        android:text="身份证号"/>
    <EditText
        android:id="@+id/et_idCard"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="left"
        android:background="@null"
        android:textColorHint="@color/gray_cc"
        android:textColor="@color/black_33"
        android:hint="请填写您的身份证号"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="left"
        android:textColor="@color/black_33"
        android:text="上传身份证照片"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_card_positive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/circle_grayfb_bg"
            android:src="@mipmap/ic_add_pic"/>
        <ImageView
            android:id="@+id/iv_card_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerInside"
            android:background="@drawable/circle_grayfb_bg"
            android:src="@mipmap/ic_add_pic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_66"
            android:gravity="center"
            android:text="身份证正面照片"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_66"
            android:gravity="center"
            android:text="身份证反面照片" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_card_hold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerInside"
            android:background="@drawable/circle_grayfb_bg"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_add_pic"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="@dimen/dp_120"
            android:background="@drawable/circle_grayfb_bg"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_add_pic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_66"
            android:gravity="center"
            android:text="手持身份证照片"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_66"
            android:gravity="center"
            android:text="车辆右侧" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="left"
        android:textColor="@color/black_33"
        android:text="拍照事例"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/circle_grayfb_bg"
            android:src="@mipmap/ic_shili01"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            android:background="@drawable/circle_grayfb_bg"
            android:src="@mipmap/ic_shili02"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            android:background="@drawable/circle_grayfb_bg"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_shili03"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="@dimen/dp_120"
            android:background="@drawable/circle_grayfb_bg"
            android:scaleType="centerInside"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_margin="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_blue_bg"
        android:text="提交" />
</RelativeLayout>